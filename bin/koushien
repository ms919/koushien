#!/usr/bin/env ruby

require 'optparse'
require 'koushien/version'
require "koushien"

Version = Koushien::VERSION

# コマンド定義
ARGV.options do |opt|
  opt.on('--greet [OPTIONAL]') {|v|
    puts v ? v : 'hello!!'
    exit
  }
  opt.on('-v', '--version') do
    puts opt.ver
    exit
  end
  opt.parse!
end

# オプションに基づいて処理を実行
# Koushien::Command.exec(options)
